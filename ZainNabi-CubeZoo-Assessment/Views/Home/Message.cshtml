@model Cubezoo_Models.ViewModels.MessageModel

@{
    ViewData["Title"] = "Message";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Type == null)
{
    <main id="content" role="main" class="main">
        <div class="content container-fluid">
            <!-- Message Body -->
            <div id="checkoutStepSuccessMessage" style="">
                <div class="text-center">
                    <i class="@Model.Icon fa-5x mb-3"></i>
                    <div class="mb-4">
                        <h2>@Model.Title</h2>
                    </div>

                    <a class="btn btn-primary" href="@Model.Url">@Model.ButttonText </a>
                </div>
            </div>
            <!-- End Message Body -->
        </div>
    </main>
}
else
{
    <main id="content" role="main" class="main">
        <!-- Content -->
        <div class="content container-fluid">
            <div class="row align-items-sm-center py-sm-10">
                <div class="col-sm-6">
                    <div class="text-center text-sm-right mr-sm-4 mb-5 mb-sm-0">
                        <img class="w-60 w-sm-100 mx-auto" src="~/front-dashboard-v1.1/src/assets/svg/illustrations/think.svg" alt="Image Description" style="max-width: 15rem;">
                    </div>
                </div>

                <div class="col-sm-6 col-md-4 text-center text-sm-left">
                    <h1 class="display-1 mb-0">404</h1>
                    <p class="lead">@Model.Message</p>
                    <a class="btn btn-primary" href="@Model.Url">Continue</a>
                </div>
            </div>
            <!-- End Row -->
        </div>
        <!-- End Content -->
    </main>
}

